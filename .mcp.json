{
  "mcpServers": {
    "_comment": "Template for SUI MCP servers. Uncomment and configure as needed.",
    "_comment_rpc": "JSON-RPC is deprecated (removed April 2026). Use gRPC or GraphQL endpoints instead.",
    "_sui-explorer": {
      "_command": "npx",
      "_args": ["-y", "your-sui-mcp-package"],
      "_env": { "SUI_NETWORK": "mainnet" }
    },
    "_sui-indexer": {
      "_command": "npx",
      "_args": ["-y", "your-sui-indexer-mcp"],
      "_env": {
        "SUI_GRPC_URL": "grpc.mainnet.sui.io:443",
        "SUI_GRAPHQL_URL": "https://graphql.mainnet.sui.io",
        "_SUI_RPC_URL_DEPRECATED": "https://fullnode.mainnet.sui.io:443"
      }
    }
  }
}
